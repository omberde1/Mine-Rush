<!doctype html>
<html lang="zxx">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Mines | @ViewData["Title"]</title>
    <!-- LOGO ICON -->
    <link rel="icon" href="~/Game_Template/img/favicon.png">
    <!-- Scollbar CSS -->
    <link rel="stylesheet" href="~/css/scroll-bar-custom.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Game_Template/css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="~/Game_Template/css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="~/Game_Template/css/owl.carousel.min.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/Game_Template/css/all.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="~/Game_Template/css/flaticon.css">
    <link rel="stylesheet" href="~/Game_Template/css/themify-icons.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/Game_Template/css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="~/Game_Template/css/slick.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="~/Game_Template/css/style.css">
    <!-- loader -->
    <style>
    .custom-loader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5); /* Reduced opacity */
        z-index: 10000; /* Ensure it appears on top */
        justify-content: center;
        align-items: center;
    }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <!-- Full-Screen Spinner START -->
    <div id="loading-spinner" class="custom-loader" style="display: none;">
        <div class="spinner-border text-light" role="status"></div>
    </div>
    <!-- Full-Screen Spinner END -->

    <div class="body_bg">
        <!--::header part start::-->
        <header class="main_menu single_page_menu">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg navbar-light">
                            <a class="navbar-brand" href="@Url.Action("Home", "Game")">
                                <img src="~/Game_Template/img/logo.png" alt="logo"> </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class="menu_icon"><i class="fas fa-bars"></i></span>
                            </button>

                            <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Home", "Game")">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("PlayGame", "Game")">Play Game</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Rules", "Game")">Rules</a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Misc
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" href="@Url.Action("About", "Game")">About</a>
                                            <a class="dropdown-item" href="@Url.Action("Contact", "Game")">Contact</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <div class="dropdown btn_1 p-0 m-0 border border-light-subtle"> @* d-sm-block *@
                                    <a class="px-4 py-3 mx-3 nav-link dropdown-toggle text-white" href="@Url.Action("Profile", "Game")"
                                        id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false">
                                        Profile
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="@Url.Action("Profile", "Game")">Edit Profile</a>
                                        <a class="dropdown-item" href="@Url.Action("Wallet", "Game")">Wallet</a>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Game")">Logout</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <a href="@Url.Action("Register", "Game")" class="btn_1 d-none d-sm-block">Register</a>
                            }
                        </nav>
                    </div>
                </div>
            </div>
        </header>
        <!-- Header part end-->

        @RenderBody()

        <!--::footer_part start::-->
        <footer class="footer_part">
            <div class="footer_top">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6 col-lg-3">
                            <div class="single_footer_part">
                                <a href="@Url.Action("Home", "Game")" class="footer_logo_iner"> <img
                                        src="~/Game_Template/img/logo.png" alt="#"> </a>
                                <p>Heaven fruitful doesn't over lesser days appear creeping seasons so behold bearing
                                    days
                                    open
                                </p>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-3">
                            <div class="single_footer_part">
                                <h4>Contact Info</h4>
                                <p>Address : Mumbai, India.</p>
                                <p>Phone : +91 9870281278</p>
                                <p>Email : omberde0@gmail.com</p>
                                @* <p>Github : <a href="https://github.com/omberde1">@@omberde1</a></p>
                                <p>LinkedIn : <a href="https://www.linkedin.com/in/omberde/">@@omberde</a></p> *@
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-3">
                            <div class="single_footer_part">
                                <h4>Important Link</h4>
                                <ul class="list-unstyled">
                                    <li><a href="@Url.Action("Home", "Game")">Home</a></li>
                                    <li><a href="@Url.Action("Rules", "Game")">Rules</a></li>
                                    <li><a href="@Url.Action("Contact", "Game")">Contact</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-3">
                            <div class="single_footer_part">
                                <h4>Newsletter</h4>
                                <p>Heaven fruitful doesn't over lesser in days. Appear creeping seasons deve behold
                                    bearing
                                    days
                                    open
                                </p>
                                <div id="mc_embed_signup">
                                    <form target="_blank"
                                        action="https://spondonit.us12.list-manage.com/subscribe/post?u=1462626880ade1ac87bd9c93a&amp;id=92a4423d01"
                                        method="get" class="subscribe_form relative mail_part">
                                        <input type="email" name="email" id="newsletter-form-email"
                                            placeholder="Email Address" class="placeholder hide-on-focus"
                                            onfocus="this.placeholder = ''"
                                            onblur="this.placeholder = ' Email Address '">
                                        <button type="submit" name="submit" id="newsletter-submit"
                                            class="email_icon newsletter-submit button-contactForm"><i
                                                class="far fa-paper-plane"></i></button>
                                        <div class="mt-10 info"></div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="copygight_text">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <div class="copyright_text">
                                <P><!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                    Copyright &copy;
                                    <script>document.write(new Date().getFullYear());</script> All rights reserved |
                                    This template is made with <i class="ti-heart" aria-hidden="true"></i> by <a
                                        href="https://colorlib.com" target="_blank">Colorlib (Beko)</a>
                                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                </P>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="footer_icon social_icon">
                                <ul class="list-unstyled">
                                    <li><a href="https://github.com/omberde1" class="single_social_icon"><i
                                                class="fab fa-github"></i></a></li>
                                    <li><a href="https://www.linkedin.com/in/omberde/" class="single_social_icon"><i
                                                class="fab fa-linkedin-in"></i></a></li>
