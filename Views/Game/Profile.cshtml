@using MinesGame.ViewModels;
@model PlayerViewModel

@{
    ViewData["Title"] = "Profile";
}

@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" 
    integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/css/input-text-color.css">
}

<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Register</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->

<!-- ================ contact section start ================= -->
<section class="contact-section section_padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title mb-2 text-center">Create Account</h2>
            </div>
            <div class="col">
                <form class="form-contact contact_form"
                    asp-action="Profile"
                    asp-controller="Game"
                    method="post">
                    <div class="row">

                        <div class="col-12 mt-2">
                            <div class="form-group mb-0">
                                <input class="form-control" value="@Model.Username" id="newUsername" type="text"
                                    onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter new Username'"
                                    placeholder='Enter new Username'>
                            </div>
                            <span class="invalid-feedback" id="newUsernameError"></span>
                        </div>
                        <div class="col-12 mt-2">
                            <div class="form-group mb-0">
                                <input class="form-control" value="@Model.Email" id="newEmail" type="email"
                                    onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter new email address'"
                                    placeholder='Enter new email address'>
                            </div>
                            <span class="invalid-feedback" id="newEmailError"></span>
                        </div>
                        <div class="col-12 mt-2">
                            <div class="input-group mb-0">
                                <input class="form-control" value="@Model.Password" name="newPassword" id="newPassword" type="password"
                                    onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter new password'"
                                    placeholder='Enter new password'>
                                <span class="input-group-text bg-white" id="togglePassword1" style="cursor: pointer;">
                                    <i class="bi bi-eye-slash"></i>
                                </span>
                            </div>
                            <span class="invalid-feedback" id="newPasswordError"></span>
                        </div>

                    </div>
                    <div class="form-group mt-3">
                        <button type="button" class="w-100 disabled btn_1" id="editProfileBtn">Edit Profile</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- ================ contact section end ================= -->

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" 
    integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" 
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/Game_Template/js/player-form.js"></script>
    <script src="~/Game_Template/js/edit-profile-form.js"></script>
}