@{
    ViewData["Title"] = "Play Mines";
}

@section Styles {
    <link rel="stylesheet" href="~/css/mines-game.css">
}

<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Quick Play!</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->

<section class="contact-section section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center mb-4">
                <h2 class="contact-title">üíé MINES üíé</h2>
            </div>

            <div class="col-lg-10">
                <div class="row align-items-start">

                    <!-- Left Controls Column -->
                    <div class="col-md-4 controls-column">
                        <div class="mb-4">
                            <h4 class="text-center mb-3">Bet Amount</h4>
                            <select class="form-select mb-4">
                                <option>$1</option>
                                <option>$5</option>
                                <option>$10</option>
                                <option>$25</option>
                                <option>$50</option>
                                <option>$100</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <h4 class="text-center mb-3">Number of Mines</h4>
                            <select class="form-select">
                                <option>1</option>
                                <option>3</option>
                                <option>5</option>
                                <option>10</option>
                                <option>14</option>
                                <option>18</option>
                            </select>
                        </div>
                        
                        <button class="cashout-btn">CASH OUT üíµ</button>
                    </div>

                    <!-- Right Game Grid -->
                    <div class="col-md-8">
                        <div class="game-container">
                            <div class="grid-container">
                                @for (int i = 0; i < 25; i++)
                                {
                                    <button class="mine-btn" data-index="@i">‚ùì</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/mines-game.js"></script>
}